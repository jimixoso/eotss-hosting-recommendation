# EOTSS Hosting Recommendation System - Production Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-here-change-this

# Email Configuration (EOTSS Email Server)
MAIL_SERVER=smtp.office365.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=no-reply@mass.gov
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=no-reply@mass.gov

# EOTSS Recipient Email
EOTSS_EMAIL=eotss-hosting@mass.gov

# Data Storage
DATA_DIR=/app/assessment_data

# Logging
LOG_LEVEL=INFO

# Optional: Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost/eotss_db 